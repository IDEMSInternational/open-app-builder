    "noEmit": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Global type definitions.
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/*"]
}
