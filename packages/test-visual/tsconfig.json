{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  }
}
