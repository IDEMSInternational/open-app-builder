              "name": "title",
              "value": "BREATHE. Slowly. Pause.",
              "_translations": {
                "value": {
                  "tz_sw": true
                }
              },
              "type": "set_variable",
              "_nested_name": "essential_tools.tool_1.title"
            },
            {
              "name": "text_1",
              "value": "Before you say anything, slowly breathe in and out five times. It will calm you, and give you a chance to think.",
              "_translations": {
                "value": {
                  "tz_sw": true
                }
              },
